<?xml version="1.0" encoding="utf-8"?>
<com.huawei.appmarket.framework.widget.SearchBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/layout_search_edit"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/search_bar_height"
    android:layout_marginRight="@dimen/search_view_margin_right"
    android:paddingBottom="@dimen/search_view_padding_bottom"
    android:paddingLeft="@dimen/search_view_margin_left"
    android:paddingTop="@dimen/search_view_padding_top"
    app:search_bar_color_button="@color/search_btn_color_normal"
    app:search_bar_color_normal="@color/search_bar_color_normal"
    app:search_bar_color_shadow="@color/search_bar_color_shadow">

    <TextView
        android:id="@id/search_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/search_view_real_height"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@string/search_btn_click"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/search_textview_padding_left"
        android:paddingRight="@dimen/search_textview_padding_right"
        android:singleLine="true"
        android:text="@string/search_main_text"
        android:textColor="@color/edittext_hint_color"
        android:textSize="@dimen/res_textsize_13sp" />
</com.huawei.appmarket.framework.widget.SearchBarLayout>